<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#ECEFF1">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
<android.support.v7.widget.CardView
android:layout_marginTop="40dp"
        android:gravity="center"
        android:id="@+id/card1"
        card_view:cardBackgroundColor="#004D40"

        card_view:cardElevation="4dp"
         android:layout_width="match_parent"

        android:layout_height="wrap_content">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                    android:id="@+id/relativeLayout"
                    android:layout_marginBottom="20dp"
                    android:padding="20dp"
                    android:background="#004D40"
                    android:layout_above="@+id/relativeLayout2" android:layout_alignRight="@+id/relativeLayout3"
                    android:layout_alignEnd="@+id/relativeLayout3">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Previous Period:"
            android:textColor="#FFFFFF"
            android:id="@+id/textView2" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginBottom="16dp" android:layout_marginTop="16dp"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Current Period:"
            android:textColor="#FFFFFF"
            android:id="@+id/textView3"
            android:layout_below="@+id/textView2" android:layout_toLeftOf="@+id/prev"
            android:layout_toStartOf="@+id/prev" android:layout_marginBottom="16dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium" android:text="Next Period:"
              android:id="@+id/textView4"
              android:textColor="#FFFFFF"
              android:layout_below="@+id/textView3" android:layout_alignRight="@+id/textView3"
              android:layout_alignEnd="@+id/textView3"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="PHYSICS"
            android:id="@+id/prev"
            android:textColor="#FFFFFF"
            android:layout_alignBottom="@+id/textView2" android:layout_toRightOf="@+id/textView2"
            android:layout_toEndOf="@+id/textView2" android:layout_marginLeft="16dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="MATHS"
            android:id="@+id/curr"
            android:textColor="#FFFFFF"
            android:layout_alignBottom="@+id/textView3" android:layout_alignLeft="@+id/prev"
            android:layout_alignStart="@+id/prev"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="CHEMISTRY"
            android:textColor="#FFFFFF"
            android:id="@+id/next"
            android:layout_alignBottom="@+id/textView4" android:layout_alignLeft="@+id/curr"
            android:layout_alignStart="@+id/curr"/>
    </RelativeLayout>
   </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
            android:layout_below="@id/card1"
            android:layout_weight="1"
            android:id="@+id/card2"
            card_view:cardCornerRadius="6dp"
            card_view:cardElevation="4dp"
            android:layout_width="match_parent"
            card_view:cardUseCompatPadding="true"
            android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/relativeLayout2"
                android:layout_above="@+id/relativeLayout3" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
    <HorizontalScrollView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_alignParentLeft="true" android:layout_alignParentStart="true"

                          android:scrollbars="none"
                          android:layout_margin="16dp" android:id="@+id/horizontalScrollView">
        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="1"
                        android:gravity="center"
                        android:background="@drawable/rect"
                        android:padding="10dp"
                        android:layout_column="1"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="2"
                        android:gravity="center"
                        android:background="@drawable/rect"
                        android:padding="10dp"
                        android:layout_column="2"/>
                <TextView
                        android:gravity="center"
                        android:background="@drawable/rect"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="3"
                        android:layout_column="3"/>
                <TextView
                        android:gravity="center"
                        android:background="@drawable/rect"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="4"
                        android:layout_column="4"/>
                <TextView
                        android:gravity="center"
                        android:background="@drawable/rect"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text=" "
                        android:layout_column="5"/>
                <TextView
                        android:gravity="center"
                        android:background="@drawable/rect"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="5"
                        android:layout_column="6"/>
                <TextView
                        android:gravity="center"
                        android:background="@drawable/rect"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="6"
                        android:layout_column="7"/>
                <TextView
                        android:gravity="center"
                        android:background="@drawable/rect"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="7"
                        android:layout_column="8"/>
                <TextView
                        android:gravity="center"
                        android:background="@drawable/rect"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="8"
                        android:layout_column="9"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Large Text"
                        android:background="@drawable/rect"
                        android:padding="10dp"
                        android:id="@+id/period1" android:layout_column="1"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Large Text"
                        android:background="@drawable/rect"
                        android:padding="10dp"
                        android:id="@+id/period2" android:layout_column="2"/>
                <TextView
                        android:background="@drawable/rect"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Large Text"
                        android:id="@+id/period3" android:layout_column="3"/>
                <TextView
                        android:background="@drawable/rect"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Large Text"
                        android:id="@+id/period4" android:layout_column="4"/>
                <TextView
                        android:background="@drawable/rect"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="LUNCH"
                         android:layout_column="5"/>
                <TextView
                        android:background="@drawable/rect"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Large Text"
                        android:id="@+id/period5" android:layout_column="6"/>
                <TextView
                        android:background="@drawable/rect"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Large Text"
                        android:id="@+id/period6" android:layout_column="7"/>
                <TextView
                        android:background="@drawable/rect"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Large Text"
                        android:id="@+id/period7" android:layout_column="8"/>
                <TextView
                        android:background="@drawable/rect"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Large Text"
                        android:id="@+id/period8" android:layout_column="9"/>


            </TableRow>

        </TableLayout>

    </HorizontalScrollView>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
            android:layout_below="@id/card2"
            android:id="@+id/card3"
            card_view:cardCornerRadius="6dp"
            card_view:cardElevation="4dp"
            android:layout_width="match_parent"
            card_view:cardUseCompatPadding="true"
            android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true" android:layout_gravity="center"
                    android:id="@+id/relativeLayout3">
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHOW FULL TIMETABLE"
            android:id="@+id/show"
            android:onClick="show"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="This Period Will End In..."
                  android:textSize="20dp"
        android:layout_below="@id/show"
        android:layout_margin="16dp"
        android:textStyle="bold"

                  android:id="@+id/title"
        android:gravity="right"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="35"
                  android:textSize="40sp"
                  android:id="@+id/rtime"
                  android:textAppearance="?android:attr/textAppearanceLarge"
                  android:textStyle="bold"
                  android:layout_below="@+id/title" android:layout_centerHorizontal="true"
        />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Minutes..."

                  android:textStyle="bold"
                  android:layout_alignBaseline="@+id/rtime" android:layout_alignBottom="@+id/rtime"
                  android:layout_alignRight="@+id/show" android:layout_alignEnd="@+id/show"/>
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
</ScrollView>